<mvc:View
    controllerName="ns.loginpagemodule.controller.MainView"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core"
	height="100%">
    <Page id="idPage" title="CV Maker" class= "sapUiResponsivePadding--header" >
	    <content>
            
            <VBox class="sapUiSmallMargin">

                <HBox class="banner" justifyContent="Start">
                    <Image width="100%" height="100%" src="data:image/png;base64,"/>
                </HBox>
                
                <Panel>
                    <Bar class="barStyle2">
                        <contentLeft>
                            <Title level="H3" text="Personal Informations" />
                        </contentLeft>
                    </Bar>

                    <HBox width="100%" alignItems="Center" justifyContent="Center">

                        <VBox alignItems="Center" justifyContent="Center" direction="Column" >
                            <HBox >
                                <Image class="profilePicture sapUiSmallMarginTop" width="100%" height="90%" src="https://images-preview.moj-posao.net/design/portrait-crop-160x160x100.png"/>
                            </HBox>
                            <HBox class="sapUiSmallMarginTop">
                                <u:FileUploader
                                        class="sapUiSmallMarginEnd"
                                        id="profilePhoto"
                                        name="profilePhoto"
                                        tooltip="Upload your profile photo"
                                        placeholder="upload profile photo"
                                        fileType="JPG,JPEG,jpeg,jpg,PNG,png"
                                        uploadComplete="handleUploadComplete"
                                       
                                        valueState="Warning"
                                        valueStateText="Profile photo is required."
                                        />
                            </HBox>
                        </VBox>
                    </HBox > 
                
                    <f:Form>
                        <f:layout>
                            <f:ResponsiveGridLayout
                                labelSpanXL="3"
                                labelSpanL="3"
                                labelSpanM="3"
                                labelSpanS="12"
                                adjustLabelSpan="false"
                                emptySpanXL="3"
                                emptySpanL="3"
                                emptySpanM="3"
                                emptySpanS="3"
                                columnsXL="1"
                                columnsL="1"
                                columnsM="1"
                                singleContainerFullSize="false"
                                
                                 />
                        </f:layout>
                    
                        <f:FormContainer>
                            <f:formElements>
                                <f:FormElement label="Full name">
                                    <f:fields>
                                        <Input id="name" required="true" placeholder="enter first name " />
                                        <Input id="preposition" placeholder="enter preposition" required="true" />
                                        <Input id="surname" placeholder="enter surname" required="true" />
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="Street / No.">
                                    <f:fields>
                                        <Input id="address" placeholder="enter street name" required="true" />
                                        <Input id="address_number" placeholder="enter street number" required="true" >
                                            <layoutData>
                                                <l:GridData span="XL2 L1 M3 S4" />
                                            </layoutData>
                                        </Input>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="ZIP Code / City">
                                    <f:fields>
                                        <Input id="zip_code" placeholder="enter ZIP Code" required="true" >
                                            <layoutData>
                                                <l:GridData span="XL2 L1 M3 S4" />
                                            </layoutData>
                                        </Input>
                                        <Input id="city" placeholder="enter city" required="true" />
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="Country">
                                    <f:fields>
                                        <Input id="country" placeholder="enter country" required="true" />
                                    </f:fields>
                                </f:FormElement>




                                <f:FormElement id="contactNum" label="Contact Number">
                                    <f:fields>
                                        <ComboBox
                                            showSecondaryValues= "true"
                                            id="country_code"
                                            items="{
                                                path: '/country', 
                                                length:300,
                                                sorter: { path: 'text' }
                                            }"
                                            placeholder="choose your country code"
                                            >
                                            <core:ListItem  text="{code}" key="{code}" additionalText = "{name}"/>
                                        
                                                        <layoutData>
                                                            <l:GridData span="XL2 L1 M3 S4" />
                                                        </layoutData>
                                        </ComboBox> 
                                        <Input id="phone" placeholder="enter your phone number" required="true" visible="true"/>
                                        <CheckBox id="checkbox_phone" text="Hide" selected="false"  select="handleHide"/> 
                                    </f:fields>
                                </f:FormElement>



                                <f:FormElement label="Email">
                                    <f:fields>
                                        <Input id="mail" placeholder="enter email" required="true" />
                                        <Label  class="sapUiTinyMarginTop" text="@bosned.eu"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="Gender">
                                    <ComboBox id="gender" width="100%" placeholder="choose your gender" required="true">
				                        <items>
                                            <core:Item text="male" />
                                            <core:Item text="female" />
                                            <core:Item text="undefined" />
                                        </items>
                                    </ComboBox>
                                </f:FormElement>
                                <f:FormElement label="Date of birth">
                                    <f:fields>
                                        <DatePicker id="date_of_birth" 
                                            placeholder="dd-MM-yyyy" 
                                            required="true" 
                                            valueFormat="dd-MM-yyyy" 
                                            displayFormat= "dd-MM-yyyy"
                                            change="handleChange"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="Nationality">
                                    <f:fields>
                                        <Input id="nationality" placeholder="enter nationality" required="true"/>
                                    </f:fields>
                                </f:FormElement>
                            </f:formElements>
                        </f:FormContainer>
                    </f:Form>
                </Panel>

                <Panel>
                    <Bar class="barStyle2">
                        <contentLeft>
                            <Title level="H3" text="Work Experience" />
                        </contentLeft>
                        <contentRight>
                            <Button text="Add Experience" icon="sap-icon://add" press="onExperienceAdd" />
                        </contentRight>
                    </Bar>

                    <f:SimpleForm
                            id="workExperienceForm"
                            editable="false"
                            layout="ResponsiveGridLayout"
                            

                            labelSpanXL="3"
			                labelSpanL="3"
                            labelSpanM="3"
                            labelSpanS="12"

                            adjustLabelSpan="false"

                            emptySpanXL="3"
                            emptySpanL="3"
                            emptySpanM="3"
                            emptySpanS="3"

                            columnsXL="1"
			                columnsL="1"
                            columnsM="1"

                            singleContainerFullSize="false"
                    >
			            <f:content>
				
                            <Label text="Job Title"/>
                            <Input name="job_title" placeholder="enter job title"/>

                            <Label text="Company name"/>
                            <Input name="company_name" placeholder="enter company name"/>
    
                            <Label text="Job description"/>
                            <TextArea name="job_description" placeholder="enter job description" showExceededText="true" maxLength="500" growing="true" growingMaxLines="7" width="100%" />
                
                            <Label text="Start date"/>
                            <DatePicker name="start_date" placeholder="enter start date"/>

                            <Label text="End Date"/>
                            <DatePicker name="end_date" placeholder="enter end date"/>
                        
			            </f:content>
		            </f:SimpleForm>
                </Panel>

                <Panel>
                    <Bar class="barStyle2">
                        <contentLeft>
                            <Title level="H3" text="Education" />
                        </contentLeft>
                        <contentRight>
                            <Button text="Add Education" icon="sap-icon://add" press="onEducationAdd" />
                        </contentRight>
                    </Bar>

                    <f:SimpleForm id="educationForm" editable="false" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3"
                        labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="3" emptySpanL="3" emptySpanM="3" emptySpanS="0" columnsXL="1"
                        columnsL="1" columnsM="1" singleContainerFullSize="false">
                        <f:content>
                            <Label text="Title"/>
                            <Input name="educationTitle" placeholder="enter education title" required="true" value="mag."/>

                            <Label text="Institution"/>
                            <Input name="institution" placeholder="enter name" required="true" value="Filozofski"/>

                            <Label text="Time and location"/>
                            <Input name="time_location" placeholder="enter time and location" required="true" value="12.12.1222. Zagreb"/>

                            <Label text="Description"/>
                            <TextArea name="description" showExceededText="true" maxLength="500" growing="true" growingMaxLines="7" width="100%" />

                        </f:content>
                    </f:SimpleForm>
                </Panel>

                <Panel>
                    <Bar class="barStyle2">
                        <contentLeft>
                            <Title level="H3" text="Language Skills" />
                        </contentLeft>
                        <contentRight>
                            <Button text="Add Language Skill" icon="sap-icon://add" press="onLanguageSkill" />
                        </contentRight>
                    </Bar>

                    <f:SimpleForm id="languageSkillsForm" editable="false" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3"
                    labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="3" emptySpanL="3" emptySpanM="3" emptySpanS="0" columnsXL="1"
                    columnsL="1" columnsM="1" singleContainerFullSize="false">
                        <f:content>
                            <Label text="Language"/>
                            <Input class="languageValue languageSkill" name="languageSkill" placeholder="enter here" width="100%" />
                            <RatingIndicator class="languageValue languageRate" maxValue="6"  tooltip="Rating Tooltip" iconUnselected="sap-icon://circle-task" iconSelected="sap-icon://circle-task-2" iconHovered="sap-icon://circle-task-2" />
                        </f:content>
                    </f:SimpleForm>
                </Panel>

                <Panel>
                    <Bar class="barStyle2">
                        <contentLeft>
                            <Title level="H3" text="Life Philosophy" />
                        </contentLeft>
                    </Bar>

                    <f:SimpleForm id="lifePhilosophyForm" editable="false" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3"
                    labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="3" emptySpanL="3" emptySpanM="3" emptySpanS="0" columnsXL="1"
                    columnsL="1" columnsM="1" singleContainerFullSize="false">
                        <f:content>
                            <Label text="Description"/>
                            <TextArea required="true" id="life_philosophy" name="life_philosophy" placeholder="enter here" growing="true" growingMaxLines="7" width="100%" />
                        </f:content>
                    </f:SimpleForm>
                </Panel>
  
	        </VBox>

        </content>

        <footer>
            <Bar design="Footer">
                <contentLeft>
                    <Button text="Load demo data" type="Accept" press="onLoadDemoData"/>
                </contentLeft>
                <contentRight>
                    <BusyIndicator class="pdfSpinner" size="0.5em" />
                    <Button class="idDownloadPdf" text="Download PDF" type="Reject" press="getPDF"/>
                    <Button text="Save CV" type="Accept" press="onSaveCVPress"/>
                </contentRight>

            </Bar>
        </footer>

    </Page>
</mvc:View>